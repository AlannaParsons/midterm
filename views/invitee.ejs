<!DOCTYPE html>
<html lang="en">

<head>
  <title>Available Dates Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/calendar.css" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <script defer src="/scripts/calendar_FE.js"></script>
  <script defer src="/scripts/invitee_FE.js"></script>
</head>

<body>
  <!-- Top nav bar (fixed) -->
  <nav>
    <span class="logo">ScheduleMe</span>

    <span class="nav-input">
      <label>Name:</label>
      <input id="voter-name" type="text" name="user" placeholder="name" required />
    </span>

  </nav>

  <!-- Page-specific (main) content here -->
  <main>

    <section id="middle-bar">

      <ol id="ranked-choices">
      </ol>

      <ol id="dates-container">
        <% for (let date of dates) { %>
            <li data-id="<%= date.id %>" class="date-container" name="container">
              <span class="triangle triangle-right"></span>
              <span class="date-html"> <%= date.utc %> </span>
              <span class="triangle triangle-left"></span>
            </li>
        <% } %>
      </ol>

    </section>

    <div class="popup">
      <button class="accept" type="submit" form="name-form"> accept </button>
    </div>

  </main>

  <footer id="primary-footer">
  </footer>

</body>

</html>

