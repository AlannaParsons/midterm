<!DOCTYPE html>
<html lang="en">

<head>
  <title>Date Picker Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/calendar.css" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <script defer src="/scripts/calendar.js"></script>
  <script defer src="/scripts/date_picker.js"></script>
</head>

<body>
  <!-- Top nav bar (fixed) -->
  <nav>
    <span class="logo">ScheduleMe</span>

    <button id="new-tweet-button">
      <div>
      <span class="bold">Pick some dates</span>
      </div>
    </button>

  </nav>

  <!-- Page-specific (main) content here -->
  <main>

<!-- rename pls -->
    <section id="middle-bar">

<!-- type="date" is not supported in Internet Explorer 11. -->
      <form id="date-range-form">
        <p>Date :</p>
        <input type="date" id="datemax" name="datemax" max="1979-12-31"><br><br>
        <p> - </p>
        <input type="date" id="datemin" name="datemin" min="2000-01-02">
      </form>



      <div class="date" id="display-date"> DATE </div>
      <div class="date"> CALENDAR </div>

      <div class="calendar-container">
        <header class="calendar-header">
          <p class="calendar-current-date"></p>
          <div class="calendar-navigation">
            <span id="calendar-prev"
              class="material-symbols-rounded">
              chevron_left
            </span>
            <span id="calendar-next"
              class="material-symbols-rounded">
              chevron_right
            </span>
          </div>
        </header>

        <div class="calendar-body">
          <ul class="calendar-weekdays">
            <li>Sun</li>
            <li>Mon</li>
            <li>Tue</li>
            <li>Wed</li>
            <li>Thu</li>
            <li>Fri</li>
            <li>Sat</li>
          </ul>
          <ul class="calendar-dates"></ul>
        </div>
      </div>

    </section>



    <section>

      <div id="submit-schedule-button">
          <button type="submit" id="submit-button">Submit</button>
      </div>

    </section>


  </main>

  <footer id="primary-footer">
    <button id="footer-button"> <i class="fa-solid fa-circle-chevron-up"></i> </button>
  </footer>
</body>

</html>
