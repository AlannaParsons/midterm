<!DOCTYPE html>
<html lang="en">

<head>
  <title>Available Dates Page</title>

  <%- include('_partials/head') %>

  <script defer src="/scripts/invitee_FE.js"></script>
</head>

<body>
  <!-- Top nav bar (fixed) -->
  <nav class="navbar fixed-top navbar-expand-lg bg-light">

    <div class="jumbotron container-fluid px-4">
      <div>
        <h3 class="display-5"><%= schedule.type %></h1>
        created by: <%= creator.name %>
      </div>
      <p class="lead"><%= schedule.description %></p>
      <hr class="my-4">

      <div class="row">
        <div class="form-group col">
          <label for="userName">Name</label>
          <input type="text" class="form-control" id="userName" placeholder="Name" required>
        </div>
        <div class="form-group col">
          <label for="inputEmail">Email address</label>
          <input type="email" class="form-control" id="inputEmail" placeholder="Enter email" required>
        </div>
      </div>
    </div>

  </nav>

  <!-- Page-specific (main) content here -->
  <main>

    <section id="side-bar">

    </section>

    <section id="middle-bar">
      <ol id="ranked-choices">
      </ol>


      <ol id="dates-container">
        <% for (let date of dates) { %>
            <li data-id="<%= date.id %>" class="date-container" name="container">
              <span class="triangle triangle-right"></span>
              <span class="date-html"> <%= date.utc %> </span>
              <span class="triangle triangle-left"></span>
            </li>
        <% } %>
      </ol>

    </section>



  </main>

  <footer id="primary-footer">
    <div class="popup">
      <button class="accept" form="name-form"> accept </button>
    </div>
  </footer>

</body>

</html>

