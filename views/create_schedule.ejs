<!DOCTYPE html>
<html lang="en">

<head>
  <title>Date Picker Page</title>

  <%- include('_partials/head') %>

  <!-- <link rel="stylesheet" href="/styles/calendar.css" /> -->
  <link rel="stylesheet" href="/styles/lg-calendar.css" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">

  <script defer type="module" src="/scripts/calendar_FE.js"></script>
  <script defer type="module" src="/scripts/create_schedule_FE.js"></script>
</head>

<body>

  <nav>
    <span class="logo">ScheduleMe</span>

    <button id="new-tweet-button">
      <div>
      <span class="bold">Pick some dates</span>
      </div>
    </button>

  </nav>

  <!-- Page-specific (main) content here -->
  <main>

<!-- rename pls -->
    <section id="middle-bar">
      <div class="form-group">
       <label>Event type :</label>
       <input id="event-type" type="text" name="event" placeholder="meeting, lunch, party, etc..." required />
      </div>

      <div class="calendar-container">
        <header class="calendar-header">
          <p class="calendar-current-date"></p>
          <div class="calendar-navigation">
            <span id="calendar-prev"
              class="material-symbols-rounded">
              chevron_left
            </span>
            <span id="calendar-next"
              class="material-symbols-rounded">
              chevron_right
            </span>
          </div>
        </header>

        <div class="calendar-body">
          <ul class="calendar-weekdays">
            <li>Sun</li>
            <li>Mon</li>
            <li>Tue</li>
            <li>Wed</li>
            <li>Thu</li>
            <li>Fri</li>
            <li>Sat</li>
          </ul>
          <ul class="calendar-dates"></ul>
        </div>
      </div>

      <div>
        <div class="toast" role="alert" aria-live="polite" aria-atomic="true" data-delay="10000">
          <div role="alert" aria-live="assertive" aria-atomic="true">Schedule Submitted</div>
        </div>
        <input id="submit-schedule-button" class="btn btn-lg btn-outline-dark"  type="submit" value="Submit">


      </div>
    </section>



    <section>

    </section>


  </main>

  <footer id="primary-footer">
    <button id="footer-button"> <i class="fa-solid fa-circle-chevron-up"></i> </button>
  </footer>
</body>

</html>
